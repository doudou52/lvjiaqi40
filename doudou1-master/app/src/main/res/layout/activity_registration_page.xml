<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activty.Registration_page">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/icon78"
        tools:srcCompat="@tools:sample/backgrounds/scenic[13]" />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        >

        <ImageButton
            android:id="@+id/exit_bt1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"

            />

        <Button
            android:id="@+id/sign_in1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginStart="290dp"
            android:layout_marginLeft="300dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:text="使用密码登陆"></Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:paddingHorizontal="25dp"
        android:paddingTop="100dp">


        <TextView
            android:id="@+id/texttlzc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
android:textColor="#111010"

            android:textSize="45dp"></TextView>

        <EditText
            android:id="@+id/edit_Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_below="@+id/texttlzc"></EditText>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_Account"
            android:layout_marginTop="12dp"

            android:hint="请输入注册密码"></EditText>

        <Button
            android:id="@+id/bt_zhuce"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_password"
            android:background="#FF9800"
            android:text="注册">

        </Button>
    </RelativeLayout>
</LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>